---
interface Props {
  title: string;
  class?: string;
}

const { title, class: className, ...props } = Astro.props;
---

<div
  class:list={[
    "rounded-2xl bg-indigo-50 mb-6 dark:bg-indigo-950/10 p-4 dark:ring-1 dark:ring-indigo-500/10 not-prose max-w-full",
    className,
  ]}
>
  <div class="flex">
    <div class="flex-shrink-0">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="size-5 text-indigo-500"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M12 9v3.75m0-10.036A11.959 11.959 0 0 1 3.598 6 11.99 11.99 0 0 0 3 9.75c0 5.592 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.57-.598-3.75h-.152c-3.196 0-6.1-1.25-8.25-3.286Zm0 13.036h.008v.008H12v-.008Z"
        ></path>
      </svg>
    </div>
    <div class="ml-3 flex items-start flex-col">
      <h3 class="text-sm font-medium text-indigo-800 dark:text-indigo-500">
        Important
      </h3>

      <div
        class="text-sm text-indigo-700 dark:text-indigo-400 [&_p]:mt-2 [&_a]:font-bold [&_a]:text-indigo-700 dark:[&_a]:text-indigo-300"
      >
        <slot />
      </div>
    </div>
  </div>
</div>
